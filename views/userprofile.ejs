<section class="product">
<div class="container">
	<div class="row">

	 <%if(fl==="0"){%>
	     <div class="col-sm-3 col-lg-3 notak">
	     	<p>no tasks created , create new task now  </p>
	     </div>
	   <%}else{
	       task.forEach(function(t) {
	   
	  %>	
		<div class="col-sm-3 col-lg-3 onepr">
			<div class="card" style="width: 18rem;">
		    <img src="/images/download.png" class="card-img-top" class="img-responsive">		
			  <div class="card-body">
			    <h5 class="card-title">task_name : <%=t[0].taskname%></h5>
			    <p class="card-text">description : <%=t[0].description%> </p>
			    <a href="#" class="btn btn-primary">Start_date : <%=t[0].start_date%> </a>
			    <hr>
			    <a href="#" class="btn btn-primary">End_date : <%=t[0].end_start%> </a>
			  </div>
           </div>
		</div>
		      <%})}%>
		</div>
	</div>
</div>
</section>
  
